--- Add various game stats to the "notes" panel.
-- @author Darrell, PhilRoi

local WINDOW_SIZE = {
    COLS = 40,
    ROWS = 25
}

local HEX_COLOR = {
    LABEL = 'cccc99',
    Red = 'cc0000',
    Green = '00cc00',
    Orange = 'ee5500',
    Pink = 'dd00dd',
    White = 'e0e0e0',
    Blue = '2255ee',
    Purple = '9b59b6',
    Yellow = 'dddd00',
    Brown = '703A16',
}

-- For the log chat pad left with spaces so things line up.  Using strlen
-- is okay, but can do better.  Just specify manually here.
local PREFIX = {
    LABEL = '            ',
    Red = '      ',
    Green = '  ',
    Orange = '',
    Pink = '    ',
    White = '  ',
    Blue = '    ',
    Purple = ' ',
    Yellow = ' ',
    Brown = '  ',
}

local PERIODIC_SECONDS = 5

local _waitId = false
local _logNext = false
local _periodicUpdates = false

local _noteBody = false

