function getCommoditiesAndTradeGoods()
    local result = {}
    for _, object in ipairs(getAllObjects()) do
        if string.match(object.getName(), '^Commodities/Tradegoods x([13])$') then
            table.insert(result, object)
        end
    end
    return result
end

function sumTradeGoodsValue(tradeGoods)
    assert(type(tradeGoods) == 'table')

    local result = 0
    for _, object in ipairs(tradeGoods) do
        local value = string.match(object.getName(), '^Commodities/Tradegoods x([13])$')
        result = result + tonumber(value)
    end
    return result
end

